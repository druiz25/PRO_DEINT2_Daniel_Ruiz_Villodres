<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.FragmentDashBoard.EditImageFragment">

    <ImageView
        android:id="@+id/imgViewEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgViewGenHeight"
        android:layout_marginStart="@dimen/genMarg"
        android:layout_marginTop="@dimen/genMarg"
        android:layout_marginEnd="@dimen/genMarg"
        android:layout_marginBottom="@dimen/genMarg"
        android:background="@drawable/shape_imageview"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnElegirImage"
        style="@style/btnDash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnElegirImage" />

    <Button
        android:id="@+id/btnEditImage"
        style="@style/btnDash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="@string/btnEditImage" />


</LinearLayout>